{
  "name": "statery",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "A happy little state management library for React and friends.",
  "homepage": "https://github.com/hmans/statery",
  "keywords": [
    "react",
    "state",
    "state-management",
    "hooks"
  ],
  "sideEffects": false,
  "version": "0.6.0-0",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    ".": "./dist/index.modern.js",
    "./react": "./dist/react.modern.js",
    "./preact": "./dist/preact.modern.js"
  },
  "typesVersions": {
    "*": {
      "react": [
        "dist/react"
      ],
      "preact": [
        "dist/preact"
      ]
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "**"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "microbundle watch src/*.ts --external react,preact",
    "build": "microbundle build src/*.ts --external react,preact",
    "test": "jest",
    "docs": "typedoc src/index.ts",
    "prepublishOnly": "yarn test && yarn build"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "preact": "^10.5.13",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typedoc": "^0.20.1",
    "typescript": "^4.1.3"
  }
}
