{
  "name": "statery",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "A happy little state management library for React and friends.",
  "homepage": "https://github.com/hmans/statery",
  "keywords": [
    "react",
    "state",
    "state-management",
    "hooks"
  ],
  "sideEffects": false,
  "version": "0.6.3",
  "main": "dist/statery.cjs.js",
  "module": "dist/statery.esm.js",
  "types": "dist/statery.cjs.js",
  "files": [
    "dist/",
    "README.md",
    "LICENSE.md"
  ],
  "license": "MIT",
  "babel": {
    "comments": false,
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      [
        "@babel/preset-typescript",
        {
          "isTSX": true,
          "allExtensions": true
        }
      ]
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "test": "jest",
    "docs": "typedoc src/index.ts",
    "ci": "preconstruct validate && pnpm build && pnpm test",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:release": "pnpm ci && pnpm changeset publish"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@changesets/cli": "^2.24.1",
    "@preconstruct/cli": "^2.2.1",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "tslib": "^2.0.3",
    "typedoc": "^0.23.9",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": ">=18.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
